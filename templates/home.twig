{% extends 'layout.twig' %}

{% block title %} La bonne adresse {% endblock %}

{% block content %}

    <!-- header -->

    <header class="masthead" style="background-image: url('public/images/2118.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row title">
          <div class="col-lg-8 col-md-10 mx-auto ">
            <div class="site-heading">
              <h1>La Bonne Adresse</h1>
              <span class="subheading">Le rendez-vous des gourmets</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div class='container'>
        <div class="row publications">
            <div class="col-lg-8 col-md-10 mx-auto"> 
                {% for post in posts %}
                    <div class="post-preview">    
                        <a href='index.php?action=showpost&amp;publicationId={{post.getId}}'> <h3> {{post.getTitle}} </h3> </a>
                        <p>{{post.getText}}</p>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}