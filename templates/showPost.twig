{% extends 'layout.twig' %}

{% block title %} La bonne adresse - {{post.getTitle}} {% endblock %}

{% block content %}
    
    <header class="masthead" style="background-image: url('public/images/{{ post.getPicture }}')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row title">
          <div class="col-lg-8 col-md-10 mx-auto ">
            <div class="site-heading">
              <h1>{{ post.getTitle|raw }}</h1>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div>

        <h3>{{ post.getTitle|raw}}</h3>
        <p>{{post.getText|raw}}</p>
    
    </div>

    <div>
    <h3>Les commentaires</h3>

        {% for comment in comments %}
            <div>
                <p> {{ comment.getText|raw }} <br/>
                {{ comment.getUsername }} le {{ comment.getDate }}
                </p>
            </div>
        {% endfor %}

    </div>

    <div>
            <form action="index.php?action=addComment&amp;publicationId={{post.getId}}" method="post">
            <textarea type="textarea" id="comment" name="comment"> </textarea>
            <p> <input type="submit" value="Envoyer"/> </p>
            </form>
    </div>

{% endblock %}