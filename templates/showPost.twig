{% extends 'layout.twig' %}

{% block title %} La bonne adresse - {{post.publicationTitle}} {% endblock %}

{% block content %}
    
    <div>

        <h3>{{ post.getTitle}}</h3>
        <p>{{post.getText}}</p>
    
    </div>

    <div>
    <h3>Les commentaires</h3>

        {% for comment in comments %}
            <div>
                <p> {{ comment.getText }} <br/>
                {{ comment.getUsername }} le {{ comment.getDate }}
                </p>
            </div>
        {% endfor %}

    </div>

    <div>
            <form action="index.php?action=addComment&amp;publicationId={{post.getId}}" method="post">
            <textarea type="textarea" id="comment" name="comment"> </textarea>
            <p> <input type="submit" value="Envoyer"/> </p>
            </form>
    </div>

{% endblock %}